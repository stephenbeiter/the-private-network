<div class="container">
  <div class='row'>
    <div class="col s6 push-s3 m5 push-m3 l5 push-l3">
      <div class='card login-form-card'>
        <div class='card-title center '>
          <br>
          <span>Login</span>
        </div>
        <div class="card-content">
          <form class='login-form'>
            <div>
              <label class="form-text" for='email-login'>Email:</label>
              <input type='email' class='form-input' id='email-login' />
            </div>

            <div>
              <label class='form-text' for='password-login'>Password</label>
              <input type='password' class='form-input' id='password-login' />
            </div>
            <div class='card-bottom center'>
              <div class='buttons'>
                <button class="btn dark-blue" type="submit" name="action">Login
                  <i class="material-icons right">send</i>
                </button>
              </div>
              <br>
              <p class="joined">No account yet? <a href='/signup'>Join</a>
              </p>
              <br>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src='/javascript/login.js'></script>